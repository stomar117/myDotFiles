if which neofetch > /dev/null 2>&1; then
    clear; neofetch
fi

if [ $TERM = linux ]; then
    fbterm tmux
    read -p "Do you want to exit the tty console?(Y/n) " yes_no < /dev/tty
    case $yes_no in
        'n'|'N')
            echo "Continuing in tty console session"
        ;;
        *)
            echo "Exiting TTY...";exit
        ;;
    esac
fi
